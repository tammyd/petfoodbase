        {#</div>#}
        {% endblock %}

        <!-- Side Widget Well -->
        {% block amazonAds %}
        <div class="well ad well-slim">
          {% include 'partials/amazon.html.twig' %}
        </div>
        {% endblock %}



      </div>




    </div>
  </div>

{% endblock %}
